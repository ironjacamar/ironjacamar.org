!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title= (page.title ? (page.site_title ? page.site_title : page.title) : site.title)
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    %meta(name="description"){:content=>page.description ? page.description : site.description}
    - if site.keywords
      %meta(name="keywords"){:content=>site.keywords}
    - if page.author
      %meta(name="author"){:content=>site.identities.lookup(page.author).name}
    - if site.noindex
      %meta(name="robots" content="noindex")
    - if site.url
      %link(rel="canonical"){:href=>site.url}
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"/stylesheets/styles.css" }
    %link{ :rel=>'shortcut icon', :type=>'image/x-icon', :href=>"#{site.base_url}/favicon.ico" }
    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'//html5shim.googlecode.com/svn/trunk/html5.js' }
  %body
    %header
      %section{:style=>"padding: -20px auto;"}
        %a{:href=>"/" }
          %img{ :src=>"#{site.base_url}/images/banner.png", :alt=>"IronJacamar"}
    %article
      ~ content
      %p
      = page.disqus_comments
      %br
      %br
    %footer
      %ul
        %li
          %a{ :href=>"/"}Home
        %li
          %a{ :href=>"/about.html"}About
        %li
          %a{ :href=>"/download.html"}Download
        %li
          %a{ :href=>"/documentation.html"}Documentation
        %li
          %a{ :href=>"/community.html"}Community
        %li
          %a{ :href=>"/sourcecode.html"}Source Code
        %li
          %a{ :href=>"/issues.html"}Issues
      %a{ :href=>"http://www.redhat.com"}
        %img{ :src=>"#{site.base_url}/images/redhat_logo.png", :alt=>"Proudly sponsored by Red Hat"}
